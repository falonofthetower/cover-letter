<div class="column">
  <% if admin? %>
    <h3><%= link_to "New Project", new_admin_project_path %><h3>
  <% end %>
  <% @projects.each_with_index do |project, index| %>
    <div class="image">
      <figure><%= image_tag project.image_path %></figure>
    </div>
      <article class="text">
        <% if admin? %>
          <%= link_to "Edit", edit_admin_project_path(project) %>
        <% end %>
        <p><%= markdown(project.text) %></p>
      </article>
      <% unless @projects.length - 1 == index %>
        <hr />
      <% end %>
  <% end %>
</div>

